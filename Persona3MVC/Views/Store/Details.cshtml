@model Persona
@{
}


<div class="row">
    <div class="col-md-4 text-center">
        <img src="/personas/@Model.ImageFileName" class="img-fluid mb-3" alt="..." width="250" />
    </div>
    <div class="col-md-8">
        <h3 class="mb-3">@Model.Name</h3>
        <h3 class="mb-3">@(Model.Price)$</h3>
        <button type="button" class="btn btn-warning btn-sm" onclick="addToCart(this, @Model.Id)">
            Add to Cart <i class="bi bi-cart4"></i>
        </button>

        <hr />

        <div class="row mb-3">
            <div class="col-sm-3 fw-bold">
                Arcana
            </div>
            <div class="col-sm-9">
                @Model.Arcana
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3 fw-bold">
                Level
            </div>
            <div class="col-sm-9">
                @Model.Level
            </div>
        </div>


        <div class="fw-bold">Description</div>
        <div style="white-space: pre-line">@Model.Description</div>
    </div>
</div>
