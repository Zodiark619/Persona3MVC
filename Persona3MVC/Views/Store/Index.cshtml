@model StoreSearchModel


@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}


<form class="row g-3 mb-3">
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="arcana" asp-for="Arcana" onchange="this.form.submit()">
            <option value="">All Arcana</option>
            <option value="Magician">Magician</option>
            <option value="Death">Death</option>
            <option value="Fool">Fool</option>
            <option value="Hanged Man">Hanged Man</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="level" asp-for="Level" onchange="this.form.submit()">
            <option value="">Level</option>
            <option value="1">1</option>
            <option value="10">10</option>
            <option value="30">30</option>
            <option value="50">50</option>
            <option value="70">70</option>
            <option value="100">100</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="sort" asp-for="Sort" onchange="this.form.submit()">
            <option value="newest">Order By Newest</option>
            <option value="price_asc">Price: Low to High</option>
            <option value="price_desc">Price: High to Low</option>
        </select>
    </div>
    <div class="col-lg-6 col-md-12 d-flex">
        <input class="form-control me-2" name="search" asp-for="Search" placeholder="Search by Name">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </div>
</form>

<h2 class="pb-4 text-center">Personas</h2>

<div class="row mb-5 g-3">
    @foreach (var persona in ViewBag.Personas)
    {
        <div class="col-lg-3 col-md-6">
            <div class="rounded border shadow p-3 text-center h-100">
                <img src="/personas/@persona.ImageFileName" class="img-fluid" alt="..."
                     style="height: 180px; object-fit: contain" />
                <hr />
                <h5 class="py-2">@persona.Name</h5>
                <p>
                    Arcana: @persona.Arcana, Level: @persona.Level
                </p>
                <h4 class="mb-3">@(persona.Price)$</h4>
                <a class="btn btn-primary btn-sm mb-2" asp-controller="Store"
                   asp-action="Details" asp-route-id="@persona.Id" role="button">Details</a>
                <button type="button" class="btn btn-warning btn-sm mb-2" onclick="addToCart(this, @persona.Id)">
                    Add to Cart <i class="bi bi-cart4"></i>
                </button>
            </div>
        </div>
    }
</div>



<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            string active = "";
            if (i == ViewBag.PageIndex) active = "active";
            <li class="page-item @active">
                <a class="page-link" asp-route-pageIndex="@i"
                   asp-route-search="@Model.Search"
                   asp-route-arcana="@Model.Arcana"
                   asp-route-level="@Model.Level"
                   asp-route-sort="@Model.Sort">@i</a>

                
            </li>
        }
    </ul>
</nav>